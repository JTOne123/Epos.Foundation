{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Epos.Foundation",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Epos.Foundation.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "test Epos.Foundation",
            "command": "powershell",
            "type": "process",
            "args": [
                "-File",
                "${workspaceFolder}/scripts/RunTests.ps1"
            ],
            "group": "test"
        }
    ]
}
